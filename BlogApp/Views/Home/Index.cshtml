@model BlogApp.Models.PostViewModel
@using BlogApp.HtmlHelpers

@{
    ViewBag.Title = "Latest Posts";
}

<!-- Blog posts -->
<div class="col-md-8">
    <h3 class="pb-3 mb-4 border-bottom">@ViewBag.Title</h3>

    @if (Model.Posts.Count() > 0)
    {
        foreach (var post in Model.Posts)
        {
            @Html.Partial("_PostTemplate", post);
        }
    }
    else
    {
        <p>No posts found!</p>
    }
</div>
<!-- /.col-md-8 -->
<!-- Pagination -->
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>