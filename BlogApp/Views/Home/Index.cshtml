@model BlogApp.Models.PostViewModel
@using BlogApp.HtmlHelpers

@{
    ViewBag.Title = "Latest Posts";
}

<div class="row">
    <!-- Left sidebar -->
    <div class="col col-md-4">
        <div class="left-sidebar">
            <!-- Category list -->
            <ul class="list-group">
                <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <a href="#" class="pr-2 pr-md-0">Web-development</a>
                    <span class="badge badge-primary badge-pill">2</span>
                </li>
                <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <a href="#" class="pr-2 pr-md-0">C#-programming</a>
                    <span class="badge badge-primary badge-pill">5</span>
                </li>
                <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <a href="#" class="pr-2 pr-md-0">ASP.NET Core</a>
                    <span class="badge badge-primary badge-pill">1</span>
                </li>
                <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <a href="#" class="pr-2 pr-md-0">ASP.NET</a>
                    <span class="badge badge-primary badge-pill">10</span>
                </li>
            </ul>
            <!-- /.list-group -->
        </div>
        <!-- /.left-sidebar -->
    </div>
    <!-- /.col-md-4 -->
    <div class="col-md-8">
        <h3 class="pb-3 mb-4 border-bottom">@ViewBag.Title</h3>

            @if (Model.Posts.Count() > 0)
             {
                foreach (var post in Model.Posts)
                {
                    @Html.Partial("_PostTemplate", post);
                }
             }
             else
             {
                    <p>No posts found!</p>
             }
    </div>
    <!-- /.col-md-8 -->

    <!-- Pagination -->
    <div class="btn-group">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
    </div>
</div>
<!-- /.row -->