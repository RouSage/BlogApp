@model IEnumerable<BlogApp.Data.Tag>
@using BlogApp.HtmlHelpers

@if(Model.Count() > 0)
{
    <!-- Tag's list card -->
    <div class="card border-magenta">
        <div class="card-header">
            Tags
        </div>
        <!-- Tags list -->
        <div class="card-body d-flex align-items-start">
            @foreach (var tag in Model)
            {
                @Html.TagLink(tag, "text-dark pr-2")
            }
            </div>
    </div>
}
else
{
    <p>There are no tags yet.</p>
}
