@model BlogApp.Data.Contact

@{
    ViewBag.Title = "Contact Me";
}

<div class="col-md-8">
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class="card border-magenta"}))
    {
        <div class="card-header">
            Contact me
        </div>
        <!-- /.card-header-->
        <div class="form-group mt-3">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- /.form-group-->
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- /.form-group-->
        <div class="form-group">
            @Html.LabelFor(m => m.Website, new { @class = "col-md-3 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Website, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- /.form-group-->
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-md-3 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- /.form-group-->
        <div class="form-group">
            @Html.LabelFor(m => m.Body, new { @class = "col-md-3 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 10 })
                @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- /.form-group-->
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
        <!-- /.form-group -->
    }
</div>