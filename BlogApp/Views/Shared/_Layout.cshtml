@using System.Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="@(ViewBag.Keywords ?? ConfigurationManager.AppSettings["MetaKeywords"])" />
    <meta name="description" content="@(ViewBag.Description ?? ConfigurationManager.AppSettings["MetaDescription"])" />
    <meta name="author" content="@ConfigurationManager.AppSettings["Author"]" />

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

</head>
<body>
    <!-- Navigation/Site header -->
    <nav class="navbar navbar-expand-md navbar-dark mb-2 mb-md-4">
        <div class="container">
            <!-- Application name/Logo -->
            @Html.ActionLink("BlogApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navigation buttons -->
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(ViewBag.selectedItem == "about" ? "active" : "")">
                        @Html.ActionLink("About", "About", new { controller = "Home" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewBag.selectedItem == "contact" ? "active" : "")">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <!-- /.container-->
    </nav>
    <!-- ./navbar -->

    <!-- Main content-->
    <div class="container" role="main">
        <div class="row">
            <!-- Left sidebar -->
            @Html.Action("Sidebars", "Home")
            <!-- Main body content -->
            @RenderBody()
        </div>
        <!-- /.row -->
        <hr />
    </div>

    <footer class="container">
        <p>&copy; @DateTime.Now.Year - BlogApp</p>
    </footer>

    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
